#7번 문제
=============================================================================
number=int(input())
a_list=[ i for i in range(0,number//5+1)]
a_list.reverse()
b_list=[ i for i in range(0,number//3+1)]
b_list.reverse()
c_list=[]
for i in a_list:
    for l in b_list:
        if 3*l+5*i == number:
            c_list.append(l+i)
        
if len(c_list)!=0:
    print(c_list[0])
else:
    print("-1")
    number=int(input())
=============================================================================
fivestart=number//5
for i in range(fivestart,-1,-1):
    goal=number
    goal-=5*i
    if goal%3==0:
        print(i+goal//3)
        break
    if i == 0:
        print(-1)
