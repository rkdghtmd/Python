import sys
import math
force=list(map(int,sys.stdin.readline().split()))
number=math.ceil((force[2]-force[0])/(force[0]-force[1]))
print(number+1)
==============================================================================
A,B,V=list(map(int,input().split()))
V-=A
answer=V//(A-B)+1
if V%(A-B)!=0:
    answer+=1
print(answer)
