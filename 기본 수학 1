number=int(input())
answer=0
while 1:
    if number%5 == 0:
        print(answer+number//5)
        break
    answer+=1
    number-=3
else:
    print(-1)
=============================================================================
number=int(input())
answer=0
while number>=0:
    if number%5 == 0:
        print(answer+number//5)
        break
    answer+=1
    number-=3
else:
    print(-1)
